<div class="row">
    <div class="col-md-8 offset-2">
        <% layout("/layouts/boilerplate") %>
            <h1>Edit your listing</h1>
            <form method="POST" action="/listings/<%=listing._id %>?_method=PUT"  class="needs-validation" novalidate enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" value="<%=listing.title%>" class="form-control"  required >
                    <div class="valid-feedback">Title look GOOD</div>
                </div>

                <br>
                <div>
                    <label for="description" class="form-label">Description</label><br>
                    <textarea name="listing[description]" class="form-control"  required ><%=listing.description%></textarea>

                    <div class="invalid-feedback">Enter a short description</div>
                </div>

                <br>

                
                <div>
                    <label for="image" class="form-label">Upload New Image</label><br>
                    <input name="listing[image]" class="form-control" type="file">
                </div>

                <br>
                <div>
                    <label for="price" class="form-label">Price</label><br>
                    <input name="listing[price]" class="form-control" type="number" value="<%=listing.price%>"  required >
                    <div class="invalid-feedback">Price should be valid</div>
                </div>

                <br>

                <div class="row">



                    <div class="col-md-4">

                        <label for="location" class="form-label">Location</label><br>
                        <input name="listing[location]" class="form-control" type="text" value="<%=listing.location%>"  required >
                        <div class="invalid-feedback">Location should be valid</div>

                    </div>

                    <br>
                    <div class="col-md-8">
                        <label for="country" class="form-label">Country</label><br>
                        <input name="listing[country]" class="form-control" type="text" value="<%=listing.country%>"  required >
                        
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>

                    <br>

                </div>
                <br>
                <button class="btn btn-dark" style="background-color: #fe424d;">EDIT</button>
                <br><br><br>
            </form>
    </div>
</div>

